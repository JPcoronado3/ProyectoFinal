package PatronProxy;

 * Clase para gestionar las notas de un estudiante
 * @author Juan Coronado
 */public class Calificaciones {

    private double[] cortes; // Calificaciones de los 3 cortes

    public Calificaciones() {
        cortes = new double[3];
    }

    // Registrar una nota para un corte espec√≠fico
    public void registrarNota(int corte, double nota) {
        if (corte < 1 || corte > 3) {
            System.out.println("Error: El corte debe estar entre 1 y 3.");
        } else {
            cortes[corte - 1] = nota;
            System.out.println("Nota registrada: Corte " + corte + ", Nota: " + nota);
        }
    }

    // Calcular el promedio ponderado
    public double calcularPromedio() {
        return cortes[0] * 0.3 + cortes[1] * 0.3 + cortes[2] * 0.4;
    }

    // Consultar las notas de los cortes
    public void mostrarNotas() {
        System.out.println("Notas:");
        for (int i = 0; i < cortes.length; i++) {
            System.out.println("Corte " + (i + 1) + ": " + cortes[i]);
        }
    }
}
